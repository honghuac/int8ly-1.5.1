apiVersion: kafka.strimzi.io/v1alpha1
kind: Kafka
metadata:
  name: {{ name }}
spec:
  kafka:
    version: 2.1.1
    replicas: 3
    listeners:
      plain: {}
      tls: {}
    config:
      offsets.topic.replication.factor: 3
      transaction.state.log.replication.factor: 3
      transaction.state.log.min.isr: 2
      log.message.format.version: "2.1"
    storage:
      type: persistent-claim
      size: "{{ kafka_storage_size }}Gi"
      deleteClaim: false
  zookeeper:
    replicas: 3
    storage:
      type: persistent-claim
      size: "{{ zookeeper_storage_size }}Gi"
      deleteClaim: false
  entityOperator:
    topicOperator: {}
    userOperator: {}